@using Digistat.FrameworkStd.Interfaces
@model Digistat.FrameworkStd.Model.Export.ExportJobs
@inject IDictionaryService DicSvc

<div class="row">
   <div class="col-6 mt-3 px-0">
      <div class="row">
         <div class="col-3">
            <label asp-for="exj_EmailFromName" class=" ">@DicSvc.XLate("From Name")</label>
         </div>

         <div class="col-9">
            <input asp-for="exj_EmailFromName" class="form-control" />
         </div>
      </div>
      <div class="row">
         <div class="col-3">
            <label asp-for="exj_EmailFromAddress" class="field-required">@DicSvc.XLate("From Address")</label>
         </div>

         <div class="col-9">
            <input asp-for="exj_EmailFromAddress" class="form-control control-required"  data-message="@DicSvc.XLate("From Address is required")"/>
         </div>
      </div>
      <div class="row">
         <div class="col-3">
            <label asp-for="exj_EmailToAddresses" class="field-required">@DicSvc.XLate("Recipients")</label>
         </div>

         <div class="col-9">
            @Html.HiddenFor(m => m.exj_EmailToAddresses)
            <input id="emailTo" name="emailTo" class="control-required" style="width: 100%;" data-message="@DicSvc.XLate("Recipients is required")">

         </div>
      </div>

      
      
   </div>
   <div class="col-6 mt-3 px-0">
      <div class="row">
         <div class="col-3">
            <label asp-for="exj_EmailSubject" class="field-required">@DicSvc.XLate("Subject")</label>
         </div>

         <div class="col-9">
            <input asp-for="exj_EmailSubject" class="form-control control-required" data-message="@DicSvc.XLate("Subject is required")"/>

         </div>
      </div>
      <div class="row ">

         <div class="col-3">
            <label asp-for="exj_EmailBody">@DicSvc.XLate("Body")</label>
         </div>


         <div class="col-9">

            <textarea asp-for="exj_EmailBody" class="form-control " rows="14" style="resize: none;"></textarea>


         </div>
      </div>

   </div>
</div>
<script id="noDataTemplate" type="text/x-kendo-tmpl">
   # var value = instance.input.val(); #
   # var id = instance.element[0].id; #
   <div>
       @DicSvc.XLate("No data found. Do you want to add new item -") '#: value #' ?
   </div>
   <br />
   <button class="k-button" onclick="addNew('#: id #', '#: value #')" ontouchend="addNew('#: id #', '#: value #')">@DicSvc.XLate("Add new item")</button>
</script>
